<Page
    x:Class="WeatherUWP.Views.WeatherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Windows.UI.Xaml"
    xmlns:local="using:WeatherUWP.Models"
    DataContext="{Binding WeatherVMInstance, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,50,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:ConnectionId='1'
            Grid.Row="0"
            Grid.Column="0"
            MinWidth="130"
            Margin="20"
            ItemsSource="{Binding Cities}"
                                                           
            Name="comboCities"
            HorizontalAlignment="Center"
            PlaceholderText="Select city"
        />
        <TextBox x:ConnectionId='2' 
                x:Name="textCity" 
                Text="{Binding city, Mode=TwoWay}"
                Grid.Row="1"
                Grid.Column="0"
                Margin="20"
                MinWidth="130"
                PlaceholderText="Type your city"
                HorizontalAlignment="Center"
        />
        <ComboBox x:ConnectionId='3'
            Grid.Row="2"
            Grid.Column="0"
            Margin="20"
            MinWidth="130"
            HorizontalAlignment="Center"
            Name="comboDays"
            PlaceholderText="Duration"
            SelectedItem="{Binding NumOfDays, Mode=TwoWay}"
        />
        <Button
            Grid.Row="3"
            Grid.Column="0"
            Content="Get"
            Margin="20"
            MinWidth="130"
            HorizontalAlignment="Center"
            Command="{Binding ForecastCommand}"
            />
        <ListView Grid.Column="1" Grid.RowSpan="5" ItemsSource="{Binding _forecast.forecast}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,30,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding Date}"
                              FontSize="18"
                              FontWeight="Bold"
                              TextAlignment="Center"
                              Grid.Column="0"
                              Grid.Row="0"
                         />
                        <Image Source="{Binding Icon}"
                               Grid.Column="0"
                               Grid.Row="1"/>
                        <TextBlock Text="{Binding DayTemp}"
                         FontSize="16"
                         FontWeight="Bold"
                         Margin="5"
                         Grid.Row="1"
                         Grid.Column="1"/>
                        <TextBlock Text="°C"
                         Margin="0,5,5,5"
                         FontSize="16"
                         FontWeight="Bold"
                         Grid.Row="1"          
                         Grid.Column="2"/>
                        <TextBlock Text="{Binding Pressure}"
                         FontSize="16"
                         Margin="5,5,2,5"
                         Grid.Row="1"          
                         Grid.Column="3"/>
                        <TextBlock Text="hPa"
                         Margin="0,5,5,5"
                         FontSize="16"
                         Grid.Row="1"
                         Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

