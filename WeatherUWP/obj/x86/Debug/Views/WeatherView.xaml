<Page
    x:Class="WeatherUWP.Views.WeatherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Windows.UI.Xaml"
    xmlns:local="using:WeatherUWP.Models"
    DataContext="{Binding WeatherVMInstance, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="229,0,194,502" Height="85" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="223*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:ConnectionId='1' 
                x:Name="comboCities" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="122" 
                Height="40"
                ItemsSource="{Binding Cities}"
                                                               />
            <TextBox x:ConnectionId='2' 
                x:Name="textCity" 
                Text="{Binding city, Mode=TwoWay}"
                HorizontalAlignment="Left" 
                TextWrapping="Wrap" 
                PlaceholderText="Type your city" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="337" Margin="147,0,0,0"/>

            <Button x:ConnectionId='3' 
                x:Name="button" 
                Content="Get" 
                HorizontalAlignment="Left" 
                Margin="722,0,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="71"
                Command="{Binding ForecastCommand}"/>
            <ComboBox x:ConnectionId='4' x:Name="comboDays" 
                      HorizontalAlignment="Left" 
                      Margin="592,0,0,0" 
                      VerticalAlignment="Top" 
                      Width="61" 
                      Height="40"
                      SelectedItem="{Binding NumOfDays, Mode=TwoWay}" RenderTransformOrigin="-0.25,0.588"/>
            <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" Height="23" Margin="496,10,0,0" TextWrapping="Wrap" Text="Forecast for" VerticalAlignment="Top" Width="86"/>
            <TextBlock x:ConnectionId='6' x:Name="textBlock1" HorizontalAlignment="Left" Margin="672,13,0,0" TextWrapping="Wrap" Text="days" VerticalAlignment="Top"/>


        </Grid>
        <ListView ItemsSource="{Binding _forecast.forecast}" Margin="23,218,52,52" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="1"
                                    Grid.Row="1">
                            <TextBlock Text="{Binding Date}"/>
                            <Image Source="{Binding Icon}" Width="40" Height="40" />
                            <TextBlock Text="{Binding DayTemp}"
                                   Foreground="Black"
                                   FontSize="20"
                                   Padding="20,0,0,0"
                                   Grid.Column="1"
                                   Grid.Row="0"/>
                        <TextBlock Text="{Binding MaxTemp}"
                                   Foreground="Black"
                                   FontSize="16"
                                   Padding="20,0,0,0"
                                   Grid.Column="1"
                                   Grid.Row="0"/>
                        <TextBlock Text="{Binding MinTemp}"
                                   Foreground="Black"
                                   FontSize="16"
                                   Padding="20,0,0,0"
                                   Grid.Column="1"
                                   Grid.Row="0"/>
                        <TextBlock Text="{Binding Pressure}"
                                   Foreground="Black"
                                   FontSize="16"
                                   Padding="20,0,0,0"
                                   Grid.Column="1"
                                   Grid.Row="0"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

