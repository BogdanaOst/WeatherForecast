@model IEnumerable<WebWeather.Models.HistoryViewModel>
@{
    ViewBag.Title = "History";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
</head>
<body>
    <h4 style="color:#FFFFFF" align="center">Search History</h4>
    <table class="table-bordered" align="center" style="background-color:aqua">
        <tr>
            <th align="center">
                &emsp; Date
            </th>
            <th align="center">
                &emsp; City
            </th>
            <th align="center">
                Num of Days
            </th>
            <th align="center">
                Temperature
            </th>
            <th>
               
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfDaysRequested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayTemp)
            </td>
            <td>
                <img src="@item.Icon" height="40" width="40">
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
