@model IEnumerable<WebWeather.Models.HistoryViewModel>
@{
    ViewBag.Title = "History";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
</head>
<body>
    <h5 align="center">@Html.ActionLink("Back to main", "Index", "Weather")</h5>
    <h4 style="color:#FFFFFF" align="center">Search History</h4>
    <table class="table-bordered" align="center">
        <tr>
            <th>
                Date
            </th>
            <th>
                City
            </th>
            <th>
                Number Of Days requested
            </th>
            <th>
                Day Temperature
            </th>
            <th>
               
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfDaysRequested)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayTemp)
            </td>
            <td>
                <img src="@item.Icon" height="40" width="40">
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
