@model WebWeather.Models.Forecast

@{
    ViewBag.Title = "Weather";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>

<body align="center">
    <br />

    @using (Html.BeginForm("Index", "Weather", FormMethod.Post))
    {
        <p>Enter your city. If something goes wrong, You'll be redirected to main page.</p>
        <p>@Html.TextBox("CityName")</p>
        <p>You want a forecast for  @Html.DropDownList("NumOfDays", new List<SelectListItem>
      { new SelectListItem{ Text = "For Today", Value = "1"},
      new SelectListItem{ Text = "For 3 Days", Value = "3"},
      new SelectListItem{ Text = "For a week", Value = "7"}})</p>

        <input type="submit" value="Get!" />
    }

    @Html.Partial("Result", Model)
</body>
</html>